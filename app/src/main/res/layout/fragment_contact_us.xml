<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@android:style/Theme.Material.Light"
        android:id="@+id/app_bar_layout"
        card_view:targetApi="lollipop">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_contact_us"
        android:title="Contact Us"
        app:titleTextColor="#FFFFFF"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>

<ScrollView
    android:layout_below="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_gravity="top|center"
    app:cardBackgroundColor="#00998899"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="8dp">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/contact_us_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/imageProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:padding="8dp" />
    </RelativeLayout>



</LinearLayout>
</android.support.v7.widget.CardView>

</ScrollView>
    <android.support.v7.widget.CardView
        android:id="@+id/phoneCard1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mobile1Image"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/mobile1_number"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp" />
            <TextView
                android:id="@+id/mobile1_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/phoneCard2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mobile2Image"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/mobile2_number"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp" />
            <TextView
                android:id="@+id/mobile2_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/phoneCard3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mobile3Image"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/mobile3_number"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:padding="4dp" />
            <TextView
                android:id="@+id/mobile3_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="2dp"
        android:id="@+id/locationCard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addressImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="4dp"
                android:src="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="136dp"
                android:layout_marginRight="136dp"
                android:padding="4dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        />
</RelativeLayout>