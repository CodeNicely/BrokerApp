<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@android:style/Theme.Material.Light"
        android:id="@+id/app_bar_layout"
        card_view:targetApi="lollipop">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_developer"
            android:title="Developer"
            app:titleTextColor="#FFFFFF"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_developer"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="top|center"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="8dp">

        <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/developer_layout"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                     <ImageView
                            android:src="@drawable/profile_pic"
                            android:id="@+id/imageViewProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:padding="8dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/developer_name"
                        android:text="Ujjwal Agrawal"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:padding="8dp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/githubCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/githubImage"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/github" />

                    <TextView
                        android:id="@+id/github_id"
                        android:layout_width="wrap_content"
                        android:text="https://github.com/ujjwalagrawal17"
                        android:layout_height="wrap_content"
                        android:padding="4dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/linkedinCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/linkedinImage"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/linkedin" />

                    <TextView
                        android:id="@+id/linkedin_id"
                        android:layout_width="wrap_content"
                        android:text="https://www.linkedin.com/in/ujjwalagrawal17"
                        android:layout_height="wrap_content"
                        android:padding="4dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/facebookCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/facebookImage"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/facebook" />

                    <TextView
                        android:id="@+id/facebook_id"
                        android:layout_width="wrap_content"
                        android:text="https://www.facebook.com/ujjwal.agrawal.01"
                        android:layout_height="wrap_content"
                        android:padding="4dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/gmailCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gmailImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/gmail" />

                    <TextView
                        android:id="@+id/gmailid"
                        android:layout_width="wrap_content"
                        android:text="ujjwal.iitism@gmail.com"
                        android:layout_height="wrap_content"
                        android:padding="4dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/angelCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/angelImage"
                        android:layout_width="30dp"

                        android:layout_height="30dp"
                        android:padding="4dp"
                        android:src="@drawable/angel" />

                    <TextView
                        android:id="@+id/angellist_id"
                        android:layout_width="wrap_content"
                        android:text="https://angel.co/ujjwal-agrawal-2"
                        android:layout_height="wrap_content"
                        android:padding="4dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                app:cardCornerRadius="1dp"
                app:contentPadding="2dp"
                android:id="@+id/whatsAppCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/whatsappImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:padding="4dp"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91-7292828373"
                        android:layout_marginEnd="136dp"
                        android:layout_marginRight="136dp"
                        android:padding="4dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
